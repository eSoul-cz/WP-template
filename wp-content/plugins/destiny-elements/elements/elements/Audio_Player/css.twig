/* Range controller for duration */

%%SELECTOR%% .seek-slider {
  {% if design.duration.range_controller.hide_range_controller %}
  display: none;
  {% endif %}
  background-color: transparent;
  position: relative;
  width: {{ design.duration.range_controller.width.style }};
  margin: 0;
  padding: 0;
  height: {{ design.duration.range_controller.height.style }};
  float: left;
  outline: none;
  transition: 1000ms;
  {{ macros.borders(design.duration.range_controller.borders) }}
  appearance: none;
  -webkit-appearance: none;
}

@-moz-document url-prefix() {
  %%SELECTOR%% .seek-slider {
     background-color: {{ design.duration.range_controller.background_color }};
  }
}


%%SELECTOR%% .seek-slider::-moz-range-progress {
  background-color: {{ design.duration.range_controller.progress_color }};
  height:  {{ design.duration.range_controller.height.style }};
  {{ macros.borders(design.duration.range_controller.borders) }}
}


%%SELECTOR%% .seek-slider::before {
    position: absolute;
  	top: 0;
    left: 0;
    content: "";
    width: var(--seek-before-width);
    min-width: 3%;
    background-color: {{ design.duration.range_controller.progress_color }};
 	height:  {{ design.duration.range_controller.height.style }};
  	{{ macros.borders(design.duration.range_controller.borders) }}
    cursor: pointer;
    z-index: 1;
    pointer-events: none;
}

%%SELECTOR%% .seek-slider::after {
    position: absolute;
  	top: 0;
    left: 0;
    content: "";
    width: 100%;
    background-color: {{ design.duration.range_controller.background_color }};
 	height:  {{ design.duration.range_controller.height.style }};
  	{{ macros.borders(design.duration.range_controller.borders) }}
    cursor: pointer;
    z-index: 0;
    pointer-events: none;
}


%%SELECTOR%% .seek-slider::-moz-range-thumb {
  box-sizing: content-box;
  height:  {{ design.duration.range_thumb.height.style }};
  width:  {{ design.duration.range_thumb.width.style }};
  {{ macros.borders(design.duration.range_thumb.borders) }}
  background-color: {{ design.duration.range_thumb.background_color }};
  cursor: pointer;
  transition: {{ design.duration.range_thumb.active_transition.style }};
  appearance: none;
  -webkit-appearance: none;
  z-index: 1;
}

%%SELECTOR%% .seek-slider::-webkit-slider-thumb {
  position: relative;
  box-sizing: content-box;
  height:  {{ design.duration.range_thumb.height.style }};
  width:  {{ design.duration.range_thumb.width.style }};
  {{ macros.borders(design.duration.range_thumb.borders) }}
  background-color: {{ design.duration.range_thumb.background_color }};
  cursor: pointer;
  transition: {{ design.duration.range_thumb.active_transition.style }};
  appearance none;
  -webkit-appearance: none;
  z-index: 1;
}

%%SELECTOR%% .seek-slider:active::-moz-range-thumb {
  transform: scale({{ design.duration.range_thumb.active_scale }});
  background-color: {{ design.duration.range_thumb.active_background_color }};
}

%%SELECTOR%% input[type="range"]:active::-webkit-slider-thumb {
  transform: scale({{ design.duration.range_thumb.active_scale }});
  background-color: {{ design.duration.range_thumb.active_background_color }};
