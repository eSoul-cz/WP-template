%%SELECTOR%% .de-sort { 
	padding-right: 18px;
	position: relative;
  	cursor: pointer;
}

%%SELECTOR%% .de-sort::before,
%%SELECTOR%% .de-sort::after {
	border: {{ design.sort_icon.size.style }} solid transparent;
	content: "";
	display: block;
	height: 0;
	right: {{ design.sort_icon.right_gap.style }};
	top: 50%;
	position: absolute;
	width: 0;
}
%%SELECTOR%% .de-sort::before {
	border-bottom-color: {{ design.sort_icon.color }};
	margin-top: calc(-1px - ( {{ design.sort_icon.size.style }} + {{ design.sort_icon.size.style }}));
}
%%SELECTOR%% .de-sort::after {
	border-top-color: {{ design.sort_icon.color }};
	margin-top: 1px;
}