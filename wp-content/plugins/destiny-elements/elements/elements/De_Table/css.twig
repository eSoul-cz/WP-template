}

%%SELECTOR%% * {
 transition-duration: {{ design.effects.hover_transition.style }}; 
 {{ macros.spacing_complex(design.caption.spacing.padding, 'margin') }}
}

%%SELECTOR%% table {
  {{ macros.borders(design.table.borders) }};
  border-collapse: separate;
  border-spacing: 0;
  width: {{ design.table.width.style }};
  overflow: hidden;
}

