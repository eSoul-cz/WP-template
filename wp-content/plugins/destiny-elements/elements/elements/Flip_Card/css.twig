%%SELECTOR%% .de-fc-front .de-text p {
  {{ macros.typography(design.text.typography_front, globalSettings) }}
}

%%SELECTOR%% .de-fc-back .de-text p {
  {{ macros.typography(design.text.typography_back, globalSettings) }}
}

