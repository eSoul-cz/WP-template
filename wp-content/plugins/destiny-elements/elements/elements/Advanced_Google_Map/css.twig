%%SELECTOR%% .de-agm-btn,
%%SELECTOR%% .de-agm-btn {
  display: block;
  width: fit-content;
  background-color: {{ design.tooltip.button.background_color }} !important;
  width: {{ design.tooltip.button.width.style }};
  {{ macros.border_radius(design.tooltip.button.border.border_radius) }}
  {{ macros.border_complex(design.tooltip.button.border.border) }}
  {{ macros.typography(design.tooltip.button.typography, globalSettings) }} 	
  {{ macros.spacing_all(design.tooltip.button.spacing) }}
  cursor: pointer;
  
}

%%SELECTOR%% .de-agm-btn:hover,
%%SELECTOR%% .de-agm-btn:hover{
  background-color: {{ design.tooltip.button.background_color_hover }} !important;
  {{ macros.border_complex(design.tooltip.button.border.border_hover) }}
  {{ macros.typographyWithHoverableColorAndEffects(design.tooltip.button.typography) }}
}

%%SELECTOR%% .de-agm-exc {
  {{ macros.typography(design.tooltip.excerpt.typography, globalSettings) }}
  {{ macros.spacing_margin_all(design.tooltip.excerpt.margin) }}
}


%%SELECTOR%% .de-extra-fields-wrapper {
  {{ macros.spacing_all(design.tooltip.additional_data.container.spacing) }}
}

%%SELECTOR%% .de-extra-fields {
{{ macros.typography(design.tooltip.additional_data.typography, globalSettings) }}
{{ macros.spacing_margin_all(design.tooltip.additional_data.margin) }}
}


%%SELECTOR%% .de-agm-wrapper .wp-post-image {
  max-width: {{ design.tooltip.featured_image.max_height.style }};
  max-height:  {{ design.tooltip.featured_image.max_width.style }};
  {{ macros.borders(design.tooltip.featured_image.borders) }}
}