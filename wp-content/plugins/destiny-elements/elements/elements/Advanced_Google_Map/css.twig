%%SELECTOR%%, %%SELECTOR%% #de-map {
  width: {{ design.map_size.width.style }};
  height: {{ design.map_size.height.style }};
}

%%SELECTOR%% svg { /* also, prefix with element classname */
    font-size: 24px !important;
    width: 30px !important;
    height: 30px !important;
    stroke-width: 0;
    stroke: red;
    fill: red;
}

%%SELECTOR%% .gm-style-iw, 
%%SELECTOR%% .gm-style-iw-d {
    background-color: {{ design.tooltip.background_color }} !important;
	{{ macros.spacing_all(design.tooltip.spacing) }}
 	{{ macros.borders(design.tooltip.borders) }}
    overflow-y: auto !important;
    overflow-x: hidden !important;
} 

%%SELECTOR%% .gm-style-iw-tc::after {
  background-color: {{ design.tooltip.background_color }} !important;
}

